
<h1>    <%= @cocktail.name %></h1>

%= cl_image_tag @article.photo, height: 300, width: 400, crop: :fill %>
  <%= @cocktail.doses.each do|dose|  %>
  <%= @dose.description %>
  <%= link_to 'Delete',dose_path(dose),method: :delete, 'data-confirm':'are you sure?' %>
  <% end  %>


<div class="card"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">

</div>







